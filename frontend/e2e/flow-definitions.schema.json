{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flow Coverage Definitions",
  "type": "object",
  "additionalProperties": false,
  "required": ["flows"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "flows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "module", "priority", "roles", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "module": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "enum": ["P1", "P2", "P3"]
          },
          "roles": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "description": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
