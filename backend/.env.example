# ===========================================================================
# Environment
# ===========================================================================
DJANGO_ENV=development
DJANGO_SECRET_KEY=change-me-please-set-a-long-random-secret-key-min-50-chars
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=INFO

# ===========================================================================
# Database (default: SQLite for development)
# For production, set DB_ENGINE to django.db.backends.mysql
# ===========================================================================
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=kore_project
# DB_USER=replace
# DB_PASSWORD=replace
# DB_HOST=localhost
# DB_PORT=3306

# ===========================================================================
# CORS
# ===========================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================================================
# JWT
# ===========================================================================
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ===========================================================================
# URLs
# ===========================================================================
SITE_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# ===========================================================================
# Email SMTP (Gmail)
# ===========================================================================
EMAIL_HOST_USER=replace
EMAIL_HOST_PASSWORD=replace
DEFAULT_FROM_EMAIL=KORE <noreply@example.com>

# ===========================================================================
# Wompi payment gateway
# ===========================================================================
WOMPI_ENVIRONMENT=test
WOMPI_PUBLIC_KEY=pub_test_...
WOMPI_PRIVATE_KEY=prv_test_...
WOMPI_INTEGRITY_KEY=test_integrity_...
WOMPI_EVENTS_KEY=test_events_...

# ===========================================================================
# Google reCAPTCHA
# ===========================================================================
RECAPTCHA_SITE_KEY=replace
RECAPTCHA_SECRET_KEY=replace

# ===========================================================================
# Huey task queue (Redis)
# ===========================================================================
HUEY_REDIS_URL=redis://localhost:6379/0
HUEY_IMMEDIATE=false

# ===========================================================================
# Backups (django-dbbackup)
# ===========================================================================
BACKUP_STORAGE_PATH=/var/backups/kore_project

# ===========================================================================
# Silk profiling (disabled by default)
# ===========================================================================
ENABLE_SILK=false
